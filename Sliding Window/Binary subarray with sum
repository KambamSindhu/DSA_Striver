// User function Template for Java

class Solution {
    public int numberOfSubarrays(int[] arr, int target) {
        // code here
        return sumLessThanGoal(arr,target)-sumLessThanGoal(arr,target-1);
    }
    public int sumLessThanGoal(int arr[],int target)
    {
        int l=0,r=0,sum=0;
        int n=arr.length;
        int cnt=0;
        while(r<n)
        {
            sum=sum+arr[r];
            while(sum>target)
            {
                sum=sum-arr[l];
                l++;
            }
         
                cnt=cnt+r-l+1;
            
            r++;
        }
        return cnt;
    }
}
