class Solution {
    public int maxScore(int[] cardPoints, int k) {
        // code here
        int lsum=0,rsum=0;
        for(int i=0;i<k;i++)
        {
            lsum+=cardPoints[i];
        }
        int n=cardPoints.length;
        int r=n-1;
        int sum=lsum;
        for(int i=k-1;i>=0;i--)
        {
            rsum+=cardPoints[r];
            lsum-=cardPoints[i];
            r--;
            sum=Math.max(lsum+rsum,sum);
        }
        return sum;
        
    }
}
