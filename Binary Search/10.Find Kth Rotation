class Solution {
    public int findKRotation(int arr[]) {
        // Code here
        int low=0,high=arr.length-1;
        int idx=0;
        int min=Integer.MAX_VALUE;
        while(low<=high)
        {
            int mid=(low+high)/2;
            if(arr[low]<=arr[mid])
            {
                if(min>arr[low])
                {
                idx=low;
                min=arr[low];
                }
                low=mid+1;
            }
            else{
                 if(min>arr[mid])
                {
                idx=mid;
                min=arr[mid];
                }
                high=mid-1;
            }
        }
        return idx;
    }
}
