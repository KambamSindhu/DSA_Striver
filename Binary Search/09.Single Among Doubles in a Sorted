class Solution {
    int single(int[] arr) {
        // code here
        
        int low=0,high=arr.length-1;
        int n = arr.length;
        if (n == 0) return -1;
        if (n == 1) return arr[0];
        if(arr[0]!=arr[1])
        {
            return arr[0];
        }
        if(arr[high]!=arr[high-1])
        {
            return arr[high];
        }
        while(low<=high)
        {
            int mid=(low+high)/2;
           if(mid > 0 && mid < n - 1 && arr[mid]!=arr[mid+1] && arr[mid]!=arr[mid-1])
           {
               return arr[mid];
           }
            if ((mid % 2 == 1 && arr[mid] == arr[mid - 1]) ||
                (mid % 2 == 0 && arr[mid] == arr[mid + 1])) 
           {
               low=mid+1;
           }
           else{
               high=mid-1;
           }
            
        }
        return -1;
    }
}
