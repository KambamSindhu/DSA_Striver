class Solution {
    int lowerBound(int[] arr, int target) {
        // code here
        int n=arr.length-1;
         int ans=n+1;
        int low=0,high=n;
        while(low<=high)
        {
            int mid=(low+high)/2;
            if(arr[mid]>=target)
            {
                ans=mid;
                high=mid-1;
            }
            else{
                low=mid+1;
            }
        }
        return ans;
    }
}
